                    <ion-icon name="thumbs-up-sharp"></ion-icon>
                </button>
            </form>

            <script>
                function share(text) {
                    var copyText = window.location.href + "/share/" + text;

                    if (navigator.share) {
                        navigator.clipboard.writeText(copyText);
                        navigator.share({
                                title: "rejangpedia",
                                text: "postingan dari sanak",
                                url: copyText,
                            })
                            .then(() => console.log("Successful share"))
                            .catch((error) => console.log("Error sharing", error));
                    } else {
                        try {
                            window.AndroidShareHandler.share(copyText);
                        } catch {
                            navigator.clipboard.writeText(copyText);
                            alert("Sudah Di Salin Ya, silahkan Beri ke Temanmu ya ^_^");
                        }
                    }
                }
            </script>

            <button
                onclick="toggleComments('comments<%= element.noteId %>')"
                class="btn btn-primary p-3 rounded-pill"
                style="background: rgba(77, 78, 231, 0.76);">
                <ion-icon name="chatbubble-outline"></ion-icon> Komentar
            </button>
                      <button
                onclick="share('<%= element.noteId %>')"
                class="btn btn-primary p-3 rounded-pill"
                style="color: rgb(255, 255, 255); border-radius: 24px; background: rgba(77, 78, 231, 0.76);">
                <ion-icon name="share-social-outline"></ion-icon>
            </button>
        </div>

        <div id="comments<%= element.noteId %>" class="mt-3" style="display: none">
