  <script>
    // Fungsi untuk menampilkan form komentar
    function showComment(noteId) {
      var x = document.getElementById("testt" + noteId);
      if (x.style.display === "none") {
        x.style.display = "block";
      } else {
        x.style.display = "none";
      }
